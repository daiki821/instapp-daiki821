.registration-image-box
  = image_tag 'Rectangle.png', class: 'registration-image'
.container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email, class:'label'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email",class: 'field-box'
    .field
      = f.label :password, class:'label'
      %br/
      = f.password_field :password, autocomplete: "current-password",class: 'field-box'

    = link_to "Forgot your password?", new_password_path(resource_name),class: 'forgotpass'
    %br/
    -# - if devise_mapping.rememberable?
    -#   .field
    -#     = f.check_box :remember_me
    -#     = f.label :remember_me
    .actions
      = f.submit "LOGIN", class: 'registration-btn'
 
